{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
<style>
    /* Global styles */

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        font-size: 16px;
        line-height: 1.5;
    }

    a {
        text-decoration: none;
        color: #333;
    }

    ul {
        list-style: none;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }
</style>


<div class="formulaire">
    <main>
        <section>
            {% if app.user.email  == "admin@gmail.com" %}
            <h1>Informations de l'utilisateur</h1>
            {% elseif user.roles == ["ROLE_USER"] %}
            <h1>Mes informations personnelles</h1>
            {% endif %}

            <div class="container">
                <ul>
                    <li>
                        <strong>Nom :</strong>
                        <span> {{user.nom}} </span>
                    </li>
                    <li>
                        <strong>Pr√©nom :</strong>
                        <span>{{user.prenom}}</span>
                    </li>
                    <li>
                        <strong>Email :</strong>
                        <span>{{user.email}}</span>
                    </li>
                  
                </ul>
            </div>
        </section>
        <section>
            {% if app.user.email  == "admin@gmail.com" %}
            <h1>Adresse de l'utilisateur</h1>
            {% elseif user.roles == ["ROLE_USER"] %}
            <h1>Mon adresse</h1>
            {% endif %}
     
            <div class="container">
                <ul>
                    <li>
                        <strong>Adresse :</strong>
                        <span>{{user.adresse}}</span>
                    </li>
                    <li>
                        <strong>Code postal :</strong>
                        <span>{{user.cp}}</span>
                    </li>
                    <li>
                        <strong>Ville :</strong>
                        <span>{{user.ville}}</span>
                    </li>

                </ul>
            </div>
        </section>
        <section>
            {% if app.user.email  == "admin@gmail.com" %}
            <h1>Compte de l'utilisateur</h1>
            {% elseif user.roles == ["ROLE_USER"] %}
            <h1>Mon compte</h1>
            {% endif %}
            <div class="container">
                <ul>
                    <li>
                        <strong>Identifiant :</strong>
                        <span>{{user.email}}</span>
                    </li>
                    <li>
                        <strong>Mot de passe :</strong>
                        <span>********</span>
                    </li>
                    <li>
                        <strong>Permissions :</strong>
                        {% if user.roles  == ["ROLE_ADMIN","ROLE_USER"] %}
                        <span>Administrateur</span>
                        {% elseif user.roles == ["ROLE_USER"] %}
                        <span>Utilisateur</span>
                        {% endif %}
                    </li>
                </ul>
            </div>
        <a class="btn" href="{{ path('app_user_c_r_u_d_edit', {'id': user.id}) }}">Modifier</a>
        
    </main>
</div>


{% endblock %}