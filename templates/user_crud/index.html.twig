{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block content %}
<style>
	h1 {
		margin-bottom: 40px;
		text-align: center;
	}

	table th {
		text-align: center;
	}

	table td {
		text-align: center;
	}

	.tableau {
		width: max-content;
	}
</style>
<div class="tableau">
	<h1>Gestion des utilsateurs</h1>

	<table class="table table-striped table-bordered table-hover table-responsive ">
		<thead>
			<tr>

				<th>Email</th>
				<th>Permissions</th>

				<th>Nom</th>
				<th>Pr√©nom</th>
				<th>Adresse</th>
				<th>Ville</th>
				<th>Code Postal</th>
				<th>Type Client</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for user in users %}
			<tr>

				<td>{{ user.email }}</td>
				<td>    {% if user.roles  == ["ROLE_ADMIN","ROLE_USER"] %}
					Administrateur
					{% elseif user.roles == ["ROLE_USER"] %}
					Utilisateur
					{% endif %}</td>


				<td>{{ user.nom }}</td>
				<td>{{ user.prenom }}</td>
				<td>{{ user.adresse }}</td>
				<td>{{ user.ville }}</td>
				<td>{{ user.cp }}</td>
				<td>{{ user.typeClient }}</td>
				<td>
					<a href="{{ path('app_user_c_r_u_d_show', {'id': user.id}) }}"><lord-icon
							src="https://cdn.lordicon.com/xzksbhzh.json" trigger="hover" style="width:40px;height:40px">
						</lord-icon></a>
					<a href="{{ path('app_user_c_r_u_d_edit', {'id': user.id}) }}"> <lord-icon
							src="https://cdn.lordicon.com/bxxnzvfm.json" trigger="hover" style="width:40px;height:40px">
						</lord-icon></a>
						{{ include('user_crud/_delete_form.html.twig') }}
				</td>
			</tr>
			{% else %}
			<tr>
				<td colspan="11">no records found</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_user_c_r_u_d_new') }}">Create new</a>
</div>


{% endblock %}