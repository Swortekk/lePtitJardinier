{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block content %}

<div class="tableau">
    <h1>Liste des catégories</h1>

    <table class="table table-striped table-bordered table-hover table-responsive ">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Libellé</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.libelle }}</td>
                <td>
                    <a href="{{ path('app_categorie_c_r_u_d_show', {'id': categorie.id}) }}"><lord-icon
                        src="https://cdn.lordicon.com/xzksbhzh.json" trigger="hover" style="width:40px;height:40px">
                    </lord-icon></a>
                    <a href="{{ path('app_categorie_c_r_u_d_edit', {'id': categorie.id}) }}"><lord-icon
                        src="https://cdn.lordicon.com/bxxnzvfm.json" trigger="hover" style="width:40px;height:40px">
                    </lord-icon></a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</div>


{% endblock %}