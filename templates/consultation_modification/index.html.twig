{% extends 'base.html.twig' %}

{% block title %}Hello MesureController!{% endblock %}

{% block body %}
{% block content %}








<div class="mid">



    <div class="tableau">
        <h2>Consultation des haies</h2>
        <br>
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for haie in mesHaies %}

                <tr>
                    <th>{{ haie.getCode()}}</th>
                    <td>{{ haie.getNom() }}</td>
                    <td>{{ haie.getPrix()}}</td>
                    <td>

                        <a href="{{ path('app_modifier_haie', { 'code': haie.getCode() }) }}">

                            <lord-icon src="https://cdn.lordicon.com/bxxnzvfm.json" trigger="hover"
                                style="width:50px;height:50px">
                            </lord-icon>
                        </a>

                    </td>


                </tr>
                {% endfor %}

            </tbody>


        </table>
    </div>
</div>


{% endblock %}
{% endblock %}