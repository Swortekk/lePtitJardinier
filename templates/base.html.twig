<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">

    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}


    {% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css')}}" type="text/css">
    <script src="https://cdn.lordicon.com/ritcuqlt.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
        integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>

    {% endblock %}

    {% block javascripts %}
    {#{{ encore_entry_script_tags('app') }}#}
    {% endblock %}
</head>

<body>

    <!-- Navbar content -->



    <nav class="navbar navbar-expand-lg menu">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_accueil') }}">
                <img src=" {{asset('images/logo.png')}}" alt="logo" width="50" height="auto">
                Le p'tit j@rdinier
            </a>
            {% if (app.user == null) or (is_granted('ROLE_USER')) %}
            <a class="navbar-brand" href="{{ path('app_choix') }}">
                Faire un devis en ligne
            </a>
            {% endif %}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Gestion des devis
                        </a>
                        <ul class="dropdown-menu">
                            <li> <a class="dropdown-item" href="{{ path('app_devis_c_r_u_d_index') }}">Consulter les
                                    devis</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_choix') }}">Créer un nouveau devis</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Gestion des utilisateurs
                        </a>
                        <ul class="dropdown-menu">
                            <li> <a class="dropdown-item" href="">Consulter les
                                    utilisateurs</a></li>


                            <li> <a class=" dropdown-item" href="">Créer
                                    un nouvel utilisateur</a></li>
                        </ul>
                    </li>

                    <li class=" nav-item dropdown">

                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Gestion des haies
                        </a>
                        <ul class="dropdown-menu">
                            <li> <a class="dropdown-item" href="{{ path('app_haie_c_r_u_d_index') }}">Consulter
                                    les haies</a></li>
                            <li><a class="dropdown-item" <a href="{{ path('app_haie_c_r_u_d_new') }}">Créer une
                                    nouvelle haie</a>
                            </li>
                        </ul>
                    </li>
                    {% endif %}

                </ul>

                <ul class="navbar-nav ms-auto">
                    {% if is_granted('ROLE_USER') %}
                    <li><a class="navbar-brand" href="{{ path('app_logout') }}">
                            Déconnexion
                        </a></li>

                    {% else %}


                    <li><a class="navbar-brand" href="{{ path('app_register') }}">
                            Inscription
                        </a></li>
                    <li><a class="navbar-brand" href="{{ path('app_login') }}">
                            Connexion
                        </a></li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
    </div>
    <br>
    <br>
    {% block content %}
    {% endblock %}
</body>

</html>