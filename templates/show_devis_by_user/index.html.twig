{% extends 'base.html.twig' %}

{% block title %}Hello ShowDevisByUserController!{% endblock %}
{% block content %}

<style>
    table th {
        text-align: center;
    }

    table td {
        text-align: center;
    }

    h1 {
        text-align: center;
        margin-bottom: 40px;
    }
</style>

<div class="tableau">
    <h1>
        Vos devis
    </h1>
    <table class="table table-striped table-bordered table-hover table-responsive ">
        <thead>
            <tr>
                <th>Référence</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date</th>
                <th>Haie</th>
                <th>Longueur</th>
                <th>Hauteur</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for devis in listeDevis %}
            <tr>
                <td>{{ devis.id }}</td>
                <td>{{ monUser.nom }}</td>
                <td>{{ monUser.prenom}}</td>
                <td>{{ devis.date ? devis.date|date('Y-m-d') : '' }}</td>
                <td>{{ devis.haie}}</td>
                <td>{{ devis.longueur }}</td>
                <td>{{ devis.hauteur }}</td>
                <td><a class="btn" href="{{ path('app_devis_c_r_u_d_show', {'id': devis.id}) }}">Afficher</a></td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>



{% endblock %}