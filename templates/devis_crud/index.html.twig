{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
{% block content %}
<div class="mid">



    <div class="tableau">
        <h1>Listes des devis</h1>
        <br>
        <br>
        <table class="table table-striped table-bordered table-hover table-responsive ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Longueur</th>
                    <th>Hauteur</th>
                    <th></th>
                    <th></th>

            </thead>
            <tbody>
                {% for devi in devis %}
                <tr>
                    <td>{{ devi.id }}</td>
                    <td>{{ devi.date ? devi.date|date('Y-m-d') : '' }}</td>
                    <td>{{ devi.longueur }}</td>
                    <td>{{ devi.hauteur }}</td>
                    <td>
                        {# AFFICHER #}

                        <a href="{{ path('app_devis_c_r_u_d_show', {'id': devi.id}) }}">

                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="hover"
                                style="width:40px;height:40px">
                        </a>
                    </td>
                    <td>
                        {# MODIFIER #} <a href="{{ path('app_devis_c_r_u_d_edit', {'id': devi.id}) }}">
                            <lord-icon src="https://cdn.lordicon.com/wloilxuq.json" trigger="hover"
                                style="width:40px;height:40px">
                            </lord-icon>
                        </a>
                    </td>


                </tr>
                {% else %}
                <tr>
                    <td colspan="5">Aucun devis enregistr√©</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>


    </div>
</div>
{% endblock %}
{% endblock %}